@inherits LayoutComponentBase
<AuthorizeView>
    <Authorized>
        <PageTitle>BlazorServer</PageTitle>

        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>


            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
     </Authorized>
    <NotAuthorized> 
        <BlazorServer.Components.RedirectToLogin></BlazorServer.Components.RedirectToLogin>
    </NotAuthorized>
</AuthorizeView>
